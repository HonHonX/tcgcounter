{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/counter",
        "destination": "/counter.html"
      },
      {
        "source": "/admin_counter",
        "destination": "/admin_counter.html"
      },
      {
        "source": "/admin/**",
        "destination": "/index.html"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ]
  }
}
